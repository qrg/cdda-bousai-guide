{
  "name": "cdda-bousai-guide",
  "productName": "Bousai Guide",
  "version": "0.0.1",
  "description": "Cataclysm DDA Item viewer app",
  "main": "dist/main/bundle.js",
  "scripts": {
    "start": "npm run clean && npm run bundle && npm run start:electron",
    "start:dev": "npm run clean && npm run bundle:resources && npm run start:dev-server | npm run start:electron:dev",
    "start:electron": "cross-env NODE_ENV=production electron dist/main/bundle.js",
    "start:electron:dev": "cross-env HOT=1 NODE_ENV=development electron --require babel-register ./src/main/index.js",
    "start:dev-server": "cross-env HOT=1 NODE_ENV=development webpack-dev-server --config ./task/webpack/renderer.development.babel.js --colors --progress",
    "bundle": "npm run bundle:resources && npm run bundle:main && npm run bundle:renderer",
    "bundle:main": "cross-env NODE_ENV=production webpack --optimize-minimize --config ./task/webpack/main.production.babel.js",
    "bundle:renderer": "cross-env NODE_ENV=production webpack --optimize-minimize --config ./task/webpack/renderer.production.babel.js --colors --progress",
    "bundle:resources": "babel-node ./task/copy.js",
    "clean": "babel-node ./task/clean.js",
    "package": "npm run clean && npm run bundle && babel-node ./task/package.js",
    "test": "ava --verbose && npm run lint",
    "test:watch": "ava --watch --verbose",
    "lint": "eslint --config .eslintrc.yml \"src/**/*.js\" \"test/**/*.js\" --fix",
    "clean-install": "rm -rf ./node_modules && npm cache clean && npm cache ls && rm -rf ~/.npm && npm install"
  },
  "author": "qrg",
  "repository": {
    "type": "git",
    "url": "https://github.com/qrg/cdda-bousai-guide"
  },
  "license": "MIT",
  "devDependencies": {
    "asar": "^0.12.3",
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2016": "^6.11.3",
    "babel-preset-es2017": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "devtron": "^1.3.0",
    "electron": "^1.4.1",
    "electron-devtools-installer": "^2.0.1",
    "electron-packager": "^8.1.0",
    "electron-rebuild": "^1.2.1",
    "eslint": "^3.6.1",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.10.1",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "webpack-target-electron-renderer": "^0.4.0"
  },
  "dependencies": {
    "fs-extra": "^0.30.0",
    "gettext-parser": "^1.2.0",
    "glob": "^7.1.0",
    "os-locale": "^1.4.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-0",
      "react"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "failFast": true,
    "timeout": "2m",
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
