{
  "name": "cdda-bousai-guide",
  "productName": "Bousai Guide",
  "version": "0.0.1",
  "main": "index.js",
  "description": "Cataclysm DDA Item viewer app",
  "scripts": {
    "build": "babel src -d dist",
    "test": "ava --verbose && npm run lint",
    "test:watch": "ava --watch --verbose",
    "lint": "eslint --config .eslintrc.yml \"src/**/*.js\" \"test/**/*.js\" --fix",
    "clean-install": "rm -rf ./node_modules && npm cache clean && npm cache ls && rm -rf ~/.npm && npm install"
  },
  "author": "qrg",
  "repository": {
    "type": "git",
    "url": "https://github.com/qrg/cdda-bousai-guide"
  },
  "license": "MIT",
  "devDependencies": {
    "asar": "^0.12.3",
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2016": "^6.11.3",
    "babel-preset-es2017": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^3.0.0",
    "electron": "^1.4.1",
    "electron-packager": "^8.1.0",
    "electron-rebuild": "^1.2.1",
    "eslint": "^3.6.1",
    "eslint-plugin-react": "^6.3.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "webpack-target-electron-renderer": "^0.4.0"
  },
  "dependencies": {
    "fs-extra": "^0.30.0",
    "gettext-parser": "^1.2.0",
    "glob": "^7.1.0",
    "os-locale": "^1.4.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-0",
      "react"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "failFast": true,
    "timeout": "2m",
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
